{% extends 'base.html.twig' %}

{% block title %}
    Nouveau légume
{% endblock %}
{% block menu %}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <ul class="nav navbar-nav">
            <li><a href="{{ path('homepage', {'action': 'create'}) }}">Vegetables</a></li>
            <li><a href="{{ path('location') }}">Emplacement</a></li>
        </ul>
    </div>
</nav>
{% endblock %}
{% block body %}
    <div id="wrapper">
        <div class="container">
            <h1 class="text-center">Emplacement des légumes</h1>
                {{ form_start(gridForm) }}
                    {{ form_label(gridForm.name) }}
                    {{ form_errors(gridForm.name) }}
                    {{ form_widget(gridForm.name) }}
                    {% for i in 1..grid.x %}
                        <div class="row">
                        {% for j in 1..grid.y %}
                            <span class="border border-secondary p-4 grid-cell" data-x="{{ j }}" data-y="{{ i }}"></span>
                        {% endfor %}
                        </div>
                    {% endfor %}
                {{ form_end(gridForm) }}
            </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/location.js') }}"></script>
{% endblock %}
